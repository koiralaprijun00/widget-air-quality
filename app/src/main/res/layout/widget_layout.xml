<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/widget_on_background"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:text="Kathmandu, Nepal" />

    <TextView
        android:id="@+id/air_quality_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/widget_on_background"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:text="Partly Cloudy, 25°C" />

    <TextView
        android:id="@+id/air_quality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/aqi_moderate"
        android:textSize="14sp"
        android:gravity="center"
        android:text="AQI: 85 (Moderate)" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/pm25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/widget_on_background_variant"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:text="PM2.5: 15.2 μg/m³" />

        <TextView
            android:id="@+id/pm10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/widget_on_background_variant"
            android:textSize="12sp"
            android:text="PM10: 32.7 μg/m³" />

    </LinearLayout>

    <TextView
        android:id="@+id/last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/widget_on_background_variant"
        android:textSize="10sp"
        android:gravity="end"
        android:layout_marginTop="8dp"
        android:text="Updated: Apr 24, 10:30 AM" />

</LinearLayout> 