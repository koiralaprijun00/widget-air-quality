<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FA">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Loading View -->
        <include
            android:id="@+id/loadingView"
            layout="@layout/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <ScrollView
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F0F3F8"
            android:fillViewport="true"
            android:padding="12dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 1st Section: Location & AQI -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/aqiCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="@android:color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <!-- Error View -->
                        <include
                            android:id="@+id/errorView"
                            layout="@layout/layout_error"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <!-- Content -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/contentContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <!-- Row 1: Location Name -->
                            <TextView
                                android:id="@+id/locationName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/location_name"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="#222"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginTop="16dp" />
                            <TextView
                                android:id="@+id/locationSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/location_subtitle"
                                android:textSize="13sp"
                                android:textColor="#888"
                                android:layout_marginBottom="8dp"
                                app:layout_constraintTop_toBottomOf="@id/locationName"
                                app:layout_constraintStart_toStartOf="parent" />

                            <!-- Row 2: Weather (left) and AQI (right) -->
                            <LinearLayout
                                android:id="@+id/weatherAqiContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:baselineAligned="false"
                                app:layout_constraintTop_toBottomOf="@id/locationSub"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="8dp">

                                <!-- Weather Info -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">
                                    <ImageView
                                        android:id="@+id/weatherIcon"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@android:drawable/ic_menu_compass"
                                        android:contentDescription="@string/weather_icon_description"
                                        app:tint="#1976D2" />
                                    <TextView
                                        android:id="@+id/weatherTemp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/weather_temperature"
                                        android:textSize="15sp"
                                        android:textColor="#1976D2"
                                        android:layout_marginStart="4dp" />
                                    <TextView
                                        android:id="@+id/weatherDesc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/weather_description"
                                        android:textSize="14sp"
                                        android:textColor="#888"
                                        android:layout_marginStart="8dp" />
                                </LinearLayout>

                                <!-- AQI Value Card -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:background="@drawable/aqi_value_bg"
                                    android:padding="10dp"
                                    android:layout_marginStart="12dp">
                                    <TextView
                                        android:id="@+id/aqiValue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/aqi_value"
                                        android:textSize="22sp"
                                        android:textStyle="bold"
                                        android:textColor="#000" />
                                    <TextView
                                        android:id="@+id/aqiLabel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/aqi_label"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="#000"
                                        android:layout_marginTop="-4dp" />
                                    <TextView
                                        android:id="@+id/aqiDesc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/aqi_description"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="#000"
                                        android:gravity="center"
                                        android:layout_marginTop="4dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 2nd Section: Health Advice -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/healthAdviceCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp"
                    android:backgroundTint="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@id/aqiCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/healthAdviceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/health_advice_title"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:layout_marginBottom="4dp" />
                        <TextView
                            android:id="@+id/healthAdviceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/health_advice_text"
                            android:textSize="15sp"
                            android:textColor="#222"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 3rd Section: Forecast -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/forecastCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp"
                    android:backgroundTint="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@id/healthAdviceCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/forecast_title"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="8dp"
                            android:textColor="#222" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/forecastRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal"
                            android:overScrollMode="never"
                            android:paddingBottom="8dp"
                            android:clipToPadding="false" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 4th Section: Other Locations -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/otherLocationsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp"
                    android:backgroundTint="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@id/forecastCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/other_locations_title"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="8dp"
                            android:textColor="#222" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/otherLocationsRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal"
                            android:overScrollMode="never"
                            android:clipToPadding="false"
                            android:paddingBottom="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 5th Section: Map View -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mapCard"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp"
                    app:layout_constraintTop_toBottomOf="@id/otherLocationsCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/map_placeholder"
                            android:textColor="#888"
                            android:textSize="18sp" />
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 6th Section: Air Quality Index Range Link -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/aqiRangeCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintTop_toBottomOf="@id/mapCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_info"
                            android:contentDescription="@string/aqi_info_icon_description"
                            app:tint="#1976D2" />
                        <TextView
                            android:id="@+id/aqiRangeText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/aqi_range_text"
                            android:textSize="16sp"
                            android:textColor="#1976D2"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_media_next"
                            android:contentDescription="@string/next_icon_description"
                            app:tint="#1976D2" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </FrameLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout> 
