<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FA"
    android:padding="12dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 1st Section: Location & AQI -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/aqiCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            android:backgroundTint="@android:color/white">

        <!-- Error View -->
        <include
            android:id="@+id/errorView"
            layout="@layout/layout_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Content -->
        <ScrollView
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F0F3F8"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Row 1: Location Name -->
                <TextView
                    android:id="@+id/locationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kathmandu"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#222" />
                <TextView
                    android:id="@+id/locationSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birmingham"
                    android:textSize="13sp"
                    android:textColor="#888"
                    android:layout_marginBottom="8dp" />

                <!-- Row 2: Weather (left) and AQI (right) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Weather Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/weatherIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_compass"
                            app:tint="#1976D2" />
                        <TextView
                            android:id="@+id/weatherTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="19Â°C"
                            android:textSize="15sp"
                            android:textColor="#1976D2"
                            android:layout_marginStart="4dp" />
                        <TextView
                            android:id="@+id/weatherDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rain Shower"
                            android:textSize="14sp"
                            android:textColor="#888"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- AQI Value Card (compact, right) -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/aqi_value_bg"
                        android:padding="10dp"
                        android:layout_marginStart="12dp">
                        <TextView
                            android:id="@+id/aqiValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="185"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#000" />
                        <TextView
                            android:id="@+id/aqiLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AQI"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_marginTop="-4dp" />
                        <TextView
                            android:id="@+id/aqiDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unhealthy for Sensitive Groups"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:gravity="center"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 2nd Section: Health Advice -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/healthAdviceCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            android:backgroundTint="@android:color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/healthAdviceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health Advice"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_marginBottom="4dp" />
                <TextView
                    android:id="@+id/healthAdviceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Members of sensitive groups may experience health effects. The general public is less likely to be affected."
                    android:textSize="15sp"
                    android:textColor="#222"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 3rd Section: Forecast of the Day (Hourly) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            android:backgroundTint="@android:color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forecast"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#222" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/forecastRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:paddingBottom="8dp"
                    android:clipToPadding="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 4th Section: Other Locations -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            android:backgroundTint="@android:color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Locations"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#222" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/otherLocationsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:clipToPadding="false"
                    android:paddingBottom="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 5th Section: Map View -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mapCard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="[Map View Placeholder]"
                    android:textColor="#888"
                    android:textSize="18sp" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 6th Section: Air Quality Index Range Link -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/aqiRangeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:tint="#1976D2" />
                <TextView
                    android:id="@+id/aqiRangeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Air Quality Index Range"
                    android:textSize="16sp"
                    android:textColor="#1976D2"
                    android:paddingStart="12dp" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_next"
                    android:tint="#1976D2" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView> 
